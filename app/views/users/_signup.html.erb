<section id='signup-form'>
  <% if errors %>
    <% errors.each do |error| %>
      <p> <%= error %></p>
    <% end %>
  <% end %>

  <%= form_for :users, url: users_path do |f| %>
    <span class='white-text'>Signup to create your first game</span>
    <%= f.text_field :first_name, placeholder: "First Name", class: "form-field" %>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-field" %>
    <%= f.email_field :email, placeholder: "Email", class: "form-field" %>
    <%= f.password_field :password, placeholder: "Password", class: "form-field" %>
    <%= f.submit "Get Started", class: "btn btn-default", id: 'signup-submit' %>
  <% end %>
</session>